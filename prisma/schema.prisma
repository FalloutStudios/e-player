generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model GuildSettings {
    id String @unique @id
    pro Boolean @default(false)
    proExpireAt DateTime @default(now())
    commandsChannelId String?

    djSettings GuildDjSettings[]
    cachedQueue GuildCachedQueue[]
}

model GuildDjSettings {
    id String @unique @id
    requiredPermissions BigInt @default(0)
    allowedRoles Json @default("[]")
    allowedUsers Json @default("[]")

    guildSettings GuildSettings @relation(fields: [id], references: [id])
}

model GuildCachedQueue {
    id String @unique @id
    tracks Json @default("[]")
    commandsChannelId String?

    guildSettings GuildSettings @relation(fields: [id], references: [id])
}
