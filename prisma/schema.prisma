generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Guilds {
  guildId     String             @id @unique
  djSettings  GuildDjs[]
  cachedQueue GuildCachedQueue[]
}

model GuildDjs {
  guildId             String  @id @unique
  enabled             Boolean @default(false)
  allowedRoles        Json    @default("[]")
  requiredPermissions BigInt?

  guild Guilds @relation(fields: [guildId], references: [guildId])
}

model GuildCachedQueue {
  guildId       String   @id @unique
  tracks        Json     @default("[]")
  textChannelId String?
  expireAt      DateTime @default(now())

  guild Guilds @relation(fields: [guildId], references: [guildId])
}
